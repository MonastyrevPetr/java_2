<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" onAction="#buttonClick"/>
        <Button  onAction="#buttonClick" text="Add message" />
    </HBox>
</VBox>
